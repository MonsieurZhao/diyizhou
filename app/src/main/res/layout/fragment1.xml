<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/ed_text_frag"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/yuan"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_img_frag"
        android:layout_below="@id/ed_text_frag"
        android:src="@mipmap/ic_launcher"
        android:layout_centerInParent="true"
        android:layout_margin="50dp"
        />
    <diyizhou.zhaoyufeng.bwie.com.diyizhou.WeaterView

        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/iv_img_frag"
        app:back_Color="#FF00FF"
        android:id="@+id/wv_weater_frag"/>

</RelativeLayout>